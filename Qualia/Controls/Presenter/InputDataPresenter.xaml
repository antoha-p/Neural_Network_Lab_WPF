<local:BaseUserControl x:Class="Qualia.Controls.InputDataPresenter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Qualia.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel  Orientation="Vertical" >
            <local:LabelControl Content="Task:" />
            <local:SelectValueControl x:Name="CtlTaskFunction" />
            <local:LabelControl Content="Distribution function:" />
            <local:FunctionControl x:Name="CtlDistributionFunction" />
            <Grid Name="CtlHolder">
            </Grid>
            <StackPanel Orientation="Horizontal">
                <local:LabelControl Content="Input data:" />
                <local:BoolValueControl x:Name="CtlIsPreventRepetition" Content="Prevent repetition" VerticalAlignment="Center" />
            </StackPanel>
        </StackPanel>
        <local:CanvasControl Margin="0,10,0,0" Grid.Row="1" x:Name="CtlCanvas" />
    </Grid>
</local:BaseUserControl>
