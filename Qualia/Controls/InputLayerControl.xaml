<local:LayerBase x:Class="Qualia.Controls.InputLayerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Qualia.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Name="CtlHeadPanel" Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <Label Content="Initial 0:" />
                <local:DoubleBox x:Name="CtlInitial0" IsNullAllowed="False" DefaultValue="0" ConfigParameter="InputInitial0" MinimumValue="-100" MaximumValue="100" />
                <Label Content="Initial 1:" />
                <local:DoubleBox x:Name="CtlInitial1" IsNullAllowed="False" DefaultValue="1" ConfigParameter="InputInitial1" MinimumValue="-100" MaximumValue="100" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Activation func:" />
                <local:SelectBox x:Name="CtlActivationFunc" />
                <Label Content="a:" />
                <local:DoubleBox x:Name="CtlActivationFuncParamA" ConfigParameter="ActivationFuncParamA" MinimumValue="-100" MaximumValue="100" IsNullAllowed="True" />
            </StackPanel>
            <StackPanel Name="CtlNeuronsHolder" Orientation="Vertical">
                
            </StackPanel>
        </StackPanel>
            
    </Grid>
</local:LayerBase>
