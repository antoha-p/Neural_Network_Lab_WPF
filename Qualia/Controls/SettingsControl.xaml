<UserControl x:Class="Qualia.Controls.SettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Qualia.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Orientation="Vertical">
            <Label Content="Rounds per action:" />
            <StackPanel Orientation="Horizontal">
                <Label Content="Draw error matrix:" />
                <local:IntBox x:Name="CtlSkipRoundsToDrawErrorMatrix" ConfigParameter="SettingsSkipRoundsToDrawErrorMatrix" DefaultValue="1000" IsNullAllowed="False" MaximumValue="100000" MinimumValue="1" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Draw network:" />
                <local:IntBox x:Name="CtlSkipRoundsToDrawNetworks" ConfigParameter="SettingsSkipRoundsToDrawNetworks" DefaultValue="1000" IsNullAllowed="False" MaximumValue="100000" MinimumValue="1" />
            </StackPanel>
        </StackPanel>   
    </Grid>
</UserControl>
