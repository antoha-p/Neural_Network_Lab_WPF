<local:BaseUserControl x:Class="Qualia.Controls.FunctionControl" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Qualia.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            
            <local:SelectorControl x:Name="CtlFunction" />
            <local:TextControl Text="a:" Grid.Column="1" />
            <local:DoubleValueControl x:Name="CtlParam" Grid.Column="2" />
        </Grid>
    </Grid>
</local:BaseUserControl>
